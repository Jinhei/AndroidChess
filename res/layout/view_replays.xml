<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cs213.androidchess47.ViewReplays" >

    
    <Button
        android:id="@+id/replays_sort_title_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/replays_list"
        android:layout_alignParentTop="true"
        android:onClick="sortByTitle"
        android:text="Sort by Title" />
    
    <Button
        android:id="@+id/replays_sort_date_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"       
        android:layout_toRightOf="@id/replays_sort_title_button"
        android:onClick="sortByDate" 
        android:text="Sort by Date" />
    
    <ListView
        android:id="@id/replays_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/replays_sort_title_button"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >
    </ListView>

</RelativeLayout>
